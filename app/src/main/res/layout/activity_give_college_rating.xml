<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/centre_background"
    android:orientation="vertical"
    tools:context=".GiveCollegeRating">


    <ImageView
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:src="@drawable/enquiry_bk" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:text="Name:"
                android:fontFamily="@font/baloo"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <EditText
                android:id="@+id/etname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="6dp"
                android:ems="10"
                android:background="@drawable/shape7"
                android:hint="Enter Name as per your id card"
                android:inputType="textPersonName"
                android:textColorHint="@color/common_google_signin_btn_text_light"
                android:textStyle="normal|bold" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="College:"
                android:fontFamily="@font/baloo"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/tvclgname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape7"
                android:gravity="center_vertical"
                android:hint="eg: Chandubhai S Patel Institute Of Technology"
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColorHint="@color/common_google_signin_btn_text_light"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Field:"
                android:fontFamily="@font/baloo"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/tvField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape7"
                android:gravity="center_vertical"
                android:hint="eg: Computer Engineering"
                android:paddingLeft="5dp"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:textColor="#000000"
                android:textColorHint="@color/common_google_signin_btn_text_light"/>

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="10dp">


                <ImageView
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_height="match_parent"
                    android:src="@drawable/id_card"
                    android:layout_gravity="center"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/acme"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:hint="Scan Your College ID Card"/>

            <Button
                android:id="@+id/btnScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/centre_button"
                android:text="Scan ID"
                android:fontFamily="@font/baloo"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/scanResults"
        android:layout_width="match_parent"
        android:textColor="@color/fui_transparent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="TextView" />


</LinearLayout>