                </LinearLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:minHeight="200dp"
                    app:cardBackgroundColor="#FF402D"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardPreventCornerOverlap="false">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share your\nCollege\nexperiences\nwith others"
                            android:textColor="@color/whiteBodyColor"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ProgressBar
                            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="150dp"
                            android:layout_height="5dp"
                            android:layout_marginTop="10dp"
                            android:progress="100"
                            android:progressDrawable="@drawable/progress_drawable" />

                        <Button
                            android:id="@+id/btn_give_review_college"
                            style="@style/giveCollegeReviewButton"
                            android:layout_gravity="left"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="14dp"
                            android:text="Let's Go" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:justificationMode="inter_word"
                            android:text="Give an honest and credible review of your college. Your review can be helpful to students. Your College Experience could help others."
                            android:textColor="@color/whiteBodyColor"
                            android:textSize="10sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:elevation="4dp"
                    android:src="@drawable/header_image" />
