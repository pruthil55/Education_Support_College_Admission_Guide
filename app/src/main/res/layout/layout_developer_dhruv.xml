<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/loginCardForgotPassword"
    app:cardCornerRadius="20dp"
    android:elevation="5dp"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:background="@color/whiteCardColorForgotPassword">



    <LinearLayout
        style="@style/linearParentForgotPassword"
        android:layout_gravity="center"
        android:padding="20dp">

        <TextView
            style="@style/parentForgotPassword"
            android:textStyle="bold"
            android:textAlignment="center"
            android:justificationMode="inter_word"
            android:text="Dhruv Kachhadiya"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            android:textColor="#FF5722" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mobile_number"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/tv_mobile_no_dhruv"
            style="@style/parentForgotPassword"
            android:textStyle="bold"
            android:justificationMode="inter_word"
            android:text="+91 6353868832"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDarkForgotPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mail"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/tv_mail_dhruv"
                style="@style/parentForgotPassword"
                android:textStyle="bold"
                android:justificationMode="inter_word"
                android:text="www.startnew02@gmail.com"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDarkForgotPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_linkedin"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/tv_linkedin_dhruv"
                style="@style/parentForgotPassword"
                android:textStyle="bold"
                android:justificationMode="inter_word"
                android:text="LinkedIn"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDarkForgotPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_github"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"/>

            <TextView
                android:id="@+id/tv_github_dhruv"
                style="@style/parentForgotPassword"
                android:textStyle="bold"
                android:justificationMode="inter_word"
                android:text="GitHub"
                android:textSize="14sp"
                android:textColor="@color/colorPrimaryDarkForgotPassword" />

        </LinearLayout>

    </LinearLayout>



</androidx.cardview.widget.CardView>












