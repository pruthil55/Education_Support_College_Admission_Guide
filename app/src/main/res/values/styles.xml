<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="actionModeBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />








    <!--added for login design from https://appsnipp.com/minimal-login-registration-design-with-xml-code/-->

    <!-- Base application theme. -->
    <style name="LoginThemeLoginDesign" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorLoginPrimaryDarkLoginDesign</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="parentLoginDesign">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="parentLoginDesign.TextLayout">
        <item name="android:layout_marginLeft">15dp</item>
    </style>

    <style name="modifiedEditTextLoginDesign" parent="parentLoginDesign">
        <item name="android:textSize">@dimen/newsMoreTextSizeLoginDesign</item>
    </style>

    <style name="viewParentLoginDesign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="viewParentLoginDesign.headerText">
        <item name="android:textColor">#020000</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParentLoginDesign.headerText.NoMode">
        <item name="android:textColor">#020000</item>
    </style>






    <!--no need of this code-->
    <!--<style name="AppTheme.WhiteAccent">-->
        <!--<item name="colorAccent">@color/red</item> &lt;!&ndash; Whatever color you want&ndash;&gt;-->
    <!--</style>-->




    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#566573</item>
        <item name="colorControlActivated">@color/fui_bgAnonymous</item>
    </style>














    <!--added for Home page design card view from https://appsnipp.com/free-clean-ui-home-designs-with-dark-mode/-->

    <!--styles for education app-->
    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="parent.contentLayout">
        <item name="android:background">@color/contentBodyColor</item>
        <item name="android:padding">@dimen/normalPadding</item>
    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="viewParent.headerText.contentText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/miniTitleColor</item>
    </style>

    <style name="homeCardImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="viewParent.headerText.homeCardContent" parent="viewParent.headerText.contentText">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/whiteTextColor</item>
    </style>

    <style name="viewParent.headerText.HomeCardTitle">
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="DarkModeHidden">
        <item name="android:visibility">visible</item>
    </style>











    <style name="giveCollegeReviewButton" parent="viewParent">
        <item name="android:background">@drawable/give_college_review_button</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">bold</item>
    </style>












    <style name="parentForgotPassword">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginParentForgotPassword" parent="parentForgotPassword">
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/loginBkColorForgotPassword</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="headerTextForgotPassword" parent="parentForgotPassword">
        <item name="android:textSize">@dimen/headerTextSizeForgotPassword</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/whiteTextColorForgotPassword</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="loginCardForgotPassword" parent="parentForgotPassword"></style>

    <style name="linearParentForgotPassword" parent="parentForgotPassword">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="headerTextPrimaryForgotPassword" parent="headerTextForgotPassword">
        <item name="android:textColor">@color/primaryTextColorForgotPassword</item>
    </style>

    <style name="modifiedEditTextForgotPassword" parent="parentForgotPassword">
        <item name="android:textSize">@dimen/newsMoreTextSizeForgotPassword</item>
        <item name="android:backgroundTint">@color/primaryTextColorForgotPassword</item>
    </style>

    <style name="viewParentForgotPassword">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginButtonForgotPassword" parent="viewParentForgotPassword">
        <item name="android:background">@drawable/predictor_button_bk</item>
        <item name="android:textColor">@color/whiteTextColorForgotPassword</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
